@model Traversal_Core_Project.Areas.Admin.Models.Visitor_VM
@{
    ViewData["Title"] = "AddVisitor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-xl">
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Yeni Ziyaretçi Oluştur</h5>
        </div>
        <div class="card-body">
            <form method="post">

                <div class="mb-3">
                    <label class="form-label" for="basic-default-fullname">Ziyaretçi Adı</label>
                    <input type="text" class="form-control" id="basic-default-fullname" asp-for="Firstname" />
                </div>

                <div class="mb-3">
                    <label class="form-label" for="basic-default-fullname">Ziyaretçi Soyadı</label>
                    <input type="text" class="form-control" id="basic-default-fullname" asp-for="Lastname" />
                </div>

                <div class="mb-3">
                    <label class="form-label" for="basic-default-fullname">Ziyaretçi Mail Adresi</label>
                    <input type="text" class="form-control" id="basic-default-fullname" asp-for="Mail" />
                </div>

                <div class="mb-3">
                    <label class="form-label" for="basic-default-fullname">Şehir</label>
                    <input type="text" class="form-control" id="basic-default-fullname" asp-for="City" />
                </div>

                <div class="mb-3">
                    <label class="form-label" for="basic-default-fullname">Ülke</label>
                    <input type="text" class="form-control" id="basic-default-fullname" asp-for="Country" />
                </div>



                <button type="submit" class="btn rounded-pill btn-primary">Kaydet</button>
            </form>
        </div>
    </div>
</div>


