@model IEnumerable<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12">
    <div class="card mb-4">
        <div class="card-header pb-0">
            <h6>Rehberlerimiz</h6>
        </div>
        <div class="card-body px-0 pt-0 pb-2">
            <div class="table-responsive p-0">
                <table class="table align-items-center mb-0">
                    <thead>
                        <tr>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Ad Soyad</th>
                            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Durum</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Durum Düzenle</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex px-2 py-1">
                                        <div>
                                            <img style="border-radius: 50%;" src="@item.Image" class="avatar avatar-sm me-3" alt="user1">
                                        </div>
                                        <div class="d-flex flex-column justify-content-center">
                                            <h6 class="mb-0 text-sm">@item.Name</h6>
                                            <p class="text-xs text-secondary mb-0">@item.Description</p>
                                        </div>
                                    </div>
                                </td>
                                @if (item.Status == true)
                                {
                                    <td class="align-middle text-center text-sm">
                                        <span class="badge bg-label-success">Aktif</span>
                                    </td>
                                    <td>
                                        <a href="/Admin/Guide/SetStatusPassive/@item.Id" class="btn rounded-pill btn-danger">Pasif Yap</a>
                                    </td>
                                }
                                else
                                {
                                    <td class="align-middle text-center text-sm">
                                        <span class="badge bg-label-danger">Pasif</span>
                                    </td>
                                    <td>
                                        <a href="/Admin/Guide/SetStatusActive/@item.Id" class="btn rounded-pill btn-success">Aktif Yap</a>
                                    </td>

                                }
                                <td class="align-middle">
                                    <a href="/Admin/Guide/EditGuide/@item.Id" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Düzenle">
                                        Düzenle
                                    </a>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
                <br />
                <a href="/Admin/Guide/AddGuide/" class="btn rounded-pill btn-primary">Yeni Rehber Girişi</a>
                <br />
            </div>
        </div>
    </div>
</div>



