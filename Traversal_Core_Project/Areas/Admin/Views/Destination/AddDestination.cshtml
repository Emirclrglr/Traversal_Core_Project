@model EntityLayer.Concrete.Destination
@{
    ViewData["Title"] = "AddDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-xl">
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Yeni Rota Oluştur</h5>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label class="form-label" for="basic-default-fullname">Şehir</label>
                    <input type="text" class="form-control" id="basic-default-fullname" placeholder="Paris" required asp-for="City"/>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="basic-default-company">Süre</label>
                    <input type="text" class="form-control" id="basic-default-company" placeholder="5 gün, 4 gece" asp-for="LengthOfStay"/>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="basic-default-company">Fiyat</label>
                    <input type="text" class="form-control" id="basic-default-company" placeholder="0$" asp-for="Price"/>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="basic-default-company">Kapasite</label>
                    <input type="text" class="form-control" id="basic-default-company" placeholder="0" asp-for="Capacity"/>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="basic-default-company">Ana Görsel</label>
                    <input type="text" class="form-control" id="basic-default-company" placeholder="Ana Görsel" asp-for="Image"/>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="basic-default-company">Kapak Görseli</label>
                    <input type="text" class="form-control" id="basic-default-company" placeholder="Kapak Görseli" asp-for="CoverImage" />
                </div>
                <div class="mb-3">
                    <label class="form-label" for="basic-default-company">Görsel 2</label>
                    <input type="text" class="form-control" id="basic-default-company" placeholder="Görsel 2" asp-for="Image2" />
                </div>
                <div class="mb-3">
                    <label class="form-label" for="basic-default-message">Açıklama</label>
                    <textarea id="basic-default-message"
                              class="form-control"
                              placeholder="Açıklama" asp-for="Description"></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="basic-default-message">Detay 1</label>
                    <textarea id="basic-default-message"
                              class="form-control"
                              placeholder="Detay 1" asp-for="Details1"></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="basic-default-message">Detay 2</label>
                    <textarea id="basic-default-message"
                              class="form-control"
                              placeholder="Detay 2" asp-for="Details2"></textarea>
                </div>


                <button type="submit" class="btn rounded-pill btn-primary">Kaydet</button>
            </form>
        </div>
    </div>
</div>


