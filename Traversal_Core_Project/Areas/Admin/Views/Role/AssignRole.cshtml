@model List<Role_Assign_VM>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="card p-5" style="align-items: center;">
        <h1>Rol Atama Sayfası</h1>
        <div class="card bg-primary p-5" style="color: white; display:flex; align-items:center; width: 200px">
            <form method="post">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-check">
                        <input type="hidden" asp-for="@Model[i].RoleId" />
                        <input type="hidden" asp-for="@Model[i].RoleName" />
                        <input type="checkbox" asp-for="@Model[i].RoleExists" class="form-check-input bg-dark" />
                        <label class="form-check-label" asp-for="@Model[i].RoleExists">@Model[i].RoleName</label>
                    </div>
                }
                <button class="btn btn-outline-light mt-3">Rol Ata</button>
            </form>
        </div>
       
    </div>
</div>

