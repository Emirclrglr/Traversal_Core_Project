@model List<AppUser>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="card p-5">
        <h1 class="text-center">Kullanıcı Listesi</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th width="30"></th>
                    <th style="text-align:left;">Kullanıcı Adı</th>
                    <th style="text-align: right; padding-right: 70px">Rol Ata</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><img src="@item.ImageUrl" alt="gorsel" width="70px" style="border-radius: 50%;"/></td>
                        <td style="text-align:left;">@item.UserName</td>
                        <td style="text-align: right; padding-right: 50px" ><a href="/Admin/Role/AssignRole/@item.Id" class="btn btn-outline-primary">Rol Ata</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
