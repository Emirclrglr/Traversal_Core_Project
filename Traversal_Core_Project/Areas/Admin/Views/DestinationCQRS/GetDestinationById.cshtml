@model GetDestinationByIDQueryResult
@{
    ViewData["Title"] = "GetDestinationById";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-xl">
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Rota Düzenle</h5>
        </div>
        <div class="card-body">
            <form method="post">

                <div>
                    <input type="hidden" asp-for="Id"/>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="basic-default-fullname">Şehir</label>
                    <input type="text" class="form-control" id="basic-default-fullname"  required asp-for="City" />
                </div>

                <div class="mb-3">
                    <label class="form-label" for="basic-default-fullname">Fiyat</label>
                    <input type="text" class="form-control" id="basic-default-fullname"  required asp-for="Price" />
                </div>

                <div class="mb-3">
                    <label class="form-label" for="basic-default-fullname">Kapasite</label>
                    <input type="text" class="form-control" id="basic-default-fullname"  required asp-for="Capacity" />
                </div>

                <div class="mb-3">
                    <label class="form-label" for="basic-default-fullname">Gün - Gece</label>
                    <input type="text" class="form-control" id="basic-default-fullname"  required asp-for="LengthOfStay" />
                </div>

                <div class="mb-3">
                    <label class="form-label" for="basic-default-fullname">Görsel</label>
                    <input type="text" class="form-control" id="basic-default-fullname" required asp-for="Image" />
                </div>

                <button type="submit" class="btn rounded-pill btn-primary">Kaydet</button>
            </form>
        </div>
    </div>
</div>



