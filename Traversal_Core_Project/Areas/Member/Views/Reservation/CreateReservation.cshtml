@model EntityLayer.Concrete.Reservation
@{
    ViewData["Title"] = "CreateReservation";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}

<div class="container">
    <div class="card p-5">
        <h1 class="text-center">Rezervasyon Yapın</h1>
        <form method="post">
            <div class="form-group">
                <label>Lokasyon</label>
                @Html.DropDownListFor(x => x.Destination, ((List<SelectListItem>)ViewBag.list), new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Kişi Sayısı</label>
                <input type="text" asp-for="PersonCount" class="form-control" required />
            </div>
            <div class="form-group">
                <label>Tarih</label>
                <input type="date" asp-for="ReservationDate" class="form-control" required />
            </div>
            <div class="form-group">
                <label>Varsa Eklemek İstedikleriniz</label>
                @Html.TextAreaFor(x => x.Description, 10, 5, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <button class="btn btn-outline-primary">Rezervasyon Yap</button>
            </div>
        </form>

    </div>
</div>

