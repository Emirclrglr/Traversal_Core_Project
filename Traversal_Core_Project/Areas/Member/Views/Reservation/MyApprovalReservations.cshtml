@model List<Reservation>
@{
    ViewData["Title"] = "MyApprovalReservations";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}

<div class="card p-5">
    @if (Model.Count != 0)
    {



        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Konum</th>
                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Kişi Sayısı</th>
                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Durum</th>
                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Rezervasyon Tarihi</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle text-center text-sm">
                            <p class="text-xs font-weight-bold mb-0">@item.Destination.City</p>
                        </td>
                        <td class="align-middle text-center text-sm">
                            <p class="text-xs text-secondary mb-0">@item.PersonCount</p>
                        </td>
                        <td class="align-middle text-center text-sm">
                            <span class="badge bg-warning">@item.Status</span>
                        </td>
                        <td class="align-middle text-center text-sm">
                            <span class="text-secondary text-xs font-weight-bold">@(((DateTime)item.ReservationDate).ToString("dd.MM.yyyy HH:mm"))</span>
                        </td>
                    </tr>

                }


            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-danger p-5 h3 align-items-center m-0 text-center">
            <span class="text-white">Onay Bekleyen rezervasyonunuz bulunmamakta. Rezervasyon yapmak için <a class="text-white" style="text-decoration: underline; font-weight: bold;" href="/Member/Reservation/CreateReservation/">Tılayın</a></span>
        </div>
    }
    <a href="/Member/Reservation/MyReservations" class="btn btn-outline-primary">Onaylanan Rezervasyonlarım</a>

</div>

