@model EntityLayer.Concrete.Destination
@{
    ViewData["Title"] = "DestinationDetails";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}
<link rel="stylesheet" href="~/Traversal-Liberty/assets/css/style-liberty.css">
<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container">
            <h2 class="title">Tur Detayları</h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="#url">@ViewBag.v1</a></li>
                <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span>@ViewBag.v2</li>
            </ul>
        </div>
    </div>
</section>
<!-- //about breadcrumb -->
<!--/blog-->
<div class="py-5 w3l-homeblock1 text-center">
    <div class="container mt-md-3">
        <h3 class="blog-desc-big text-center mb-4">
            @Model.City
        </h3>
    </div>
</div>
<section class="blog-post-main w3l-homeblock1">
    <!--/blog-post-->
    <div class="blog-content-inf pb-5">
        <div class="container pb-lg-4">
            <div class="single-post-image">
                <div class="post-content">
                    <img src="@Model.CoverImage" class="radius-image mb-5" alt="" style="width: 100%; height: 760px;" />
                </div>
            </div>
            <div class="single-post-content">
                <p class="alphabet mb-4">
                    <h3 class="blog-desc-big m-0 mb-lg-4 mb-3">@Model.Details1Heading</h3>
                    @Model.Details1
                </p>
                <blockquote class="blockquote my-5">
                    <div class="icon-quote"><span class="fa fa-quote-left" aria-hidden="true"></span></div>
                    Her şey bir yana, her seyahat bir tedavidir bir sıçrama ve kendine gelmedir.
                    <footer class="blockquote-footer mt-3">
                        Franz Kafka
                    </footer>
                </blockquote>
                <h3 class="blog-desc-big m-0 mb-4">Şehirden Görseller</h3>
                <div class="sing-post-thumb mb-5 row pt-3">
                    <div class="col-sm-6">
                        <a href="#url"><img src="@Model.Image" class="radius-image" alt="" style="width: 400px; height: 450px;"></a>
                    </div>
                    <div class="col-sm-6 mt-sm-0 mt-3">
                        <a href="#url"><img src="@Model.Image2" class="radius-image" alt="" style="width: 400px; height: 450px;"></a>
                    </div>
                </div>
                <h3 class="blog-desc-big m-0 mb-lg-4 mb-3">@Model.Details2Heading</h3>
                <p class="mb-4">
                    @Model.Details2
                </p>

                <div class="d-grid left-right mt-5 pb-md-5">
                    <div class="buttons-singles tags">
                        <h4>Tags :</h4>
                        <a href="#blog-tag">Travel</a>
                        <a href="#blog-tag">Culture</a>
                        <a href="#blog-tag">Hotel</a>
                        <a href="#blog-tag">Food</a>
                    </div>
                    <div class="buttons-singles">
                        <h4>Share :</h4>
                        <a href="#blog-share"><span class="fa fa-facebook" aria-hidden="true"></span></a>
                        <a href="#blog-share"><span class="fa fa-twitter" aria-hidden="true"></span></a>
                        <a href="#blog-share"><span class="fa fa-google-plus" aria-hidden="true"></span></a>
                        <a href="#blog-share"><span class="fa fa-pinterest-p" aria-hidden=" true"></span></a>
                    </div>
                </div>

                <!--//author-card-->
                <div class="author-card mt-5">
                    <div class="row align-items-center">
                        <div class="col-sm-3 col-6">
                            <div>
                                <img src="@Model.Guide.Image" alt="" class="rounded-circle" width="160px">
                            </div>
                        </div>
                        <div class="col-sm-9 mt-sm-0 mt-3">
                            <h3 class="mb-3 title">@Model.Guide.Name</h3>
                            <p>
                                @Model.Guide.Description
                            </p>
                            <ul class="author-icons mt-4">
                                <li>
                                    <a class="instagram" href="@Model.Guide.InstagramUrl">
                                        <span class="fa fa-instagram"
                                              aria-hidden="true"></span>
                                    </a>
                                </li>
                                <li>
                                    <a class="twitter" href="@Model.Guide.TwitterUrl">
                                        <span class="fa fa-twitter"
                                              aria-hidden="true"></span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!--//author-card-->
                @await Component.InvokeAsync("_CommentList", new { id = ViewBag.id })

                @await Html.PartialAsync("~/Views/Comment/AddComment.cshtml")

            </div>
        </div>
        <!--//blog-post-->
</section>

<script src="~/Traversal-Liberty/assets/js/bootstrap.min.js"></script>
