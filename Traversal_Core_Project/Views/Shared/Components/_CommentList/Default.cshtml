@model List<Comment>
<div class="comments mt-5">
    <h4 class="side-title ">Comments (@ViewBag.CommentCount)</h4>
    @if (Model.Count != 0)
    {
        @foreach (var item in Model)
        {
            <div class="media mt-4">
                <div class="img-circle">
                    <img src="~/Traversal-Liberty/assets/images/149071.png" class="img-fluid" alt="...">
                </div>
                <div class="media-body">

                    <ul class="time-rply mb-2">
                        <li>
                            <a href="#URL" class="name mt-0 mb-2 d-block">@item.Name</a>
                            @(((DateTime)item.Date).ToString("dd MMM, yyyy HH:mm"))

                        </li>
                    </ul>
                    <p>
                        @item.Content
                    </p>
                </div>
            </div>

        }

    }
    else
    {
        <br />
        <p>Henüz Yorum yok! İlk yorumu siz yapın.</p>
    }

</div>
